<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.crawstationapp"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="18" />

    <application
        android:allowBackup="true" 
        android:debuggable="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".CrawStation"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Benefits"
            android:label="@string/title_activity_benefits" >
            <intent-filter>
                <action android:name="com.crawstationapp.BENEFITS" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".CheckIn"
            android:label="@string/title_activity_check_in" >
            <intent-filter>
                <action android:name="com.crawstationapp.CHECK_IN" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ViewCoupons"
            android:label="@string/title_activity_view_coupons" >
            <intent-filter>
                <action android:name="com.crawstationapp.VIEW_COUPONS" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".UseCoupon"
            android:label="@string/title_activity_use_coupon" >
            <intent-filter>
                <action android:name="com.crawstationapp.USE_COUPON" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
    </application>
</manifest>

